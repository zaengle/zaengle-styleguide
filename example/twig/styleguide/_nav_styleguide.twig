{% set currentUri = craft.app.request.getPathInfo() %}
{% for type, nav in styleguide%}
<ul class="styleguide-nav-list">
	<li class="styleguide-nav-title">{{type}}</li>
	{% for title, uri in nav %}
		<li class="{{ ('styleguide/' ~ uri) == currentUri ? 'styleguide-nav-active' }}">
			<a href="/styleguide/{{uri}}">{{title}}</a>
		</li>
	{% endfor %}
</ul>
{% endfor %}
